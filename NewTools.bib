   issn = {14712105},
   issue = {1},
   journal = {BMC Bioinformatics},
   keywords = {Algorithms,Bioinformatics,Computational Biology/Bioinformatics,Computer Appl. in Life Sciences,Microarrays},
   month = {12},
   pages = {1-14},
   pmid = {22192575},
   publisher = {BioMed Central},
   title = {MAKER2: An annotation pipeline and genome-database management tool for second-generation genome projects},
   volume = {12},
   url = {https://bmcbioinformatics.biomedcentral.com/articles/10.1186/1471-2105-12-491},
   year = {2011},
}
