   keywords = {Early detection,Multivariate analysis,Plant diseases,Plant physiology,Reflectance spectroscopy,Vascular wilt},
   month = {1},
   pages = {88-99},
   publisher = {Elsevier},
   title = {Linking physiological parameters with visible/near-infrared leaf reflectance in the incubation period of vascular wilt disease},
