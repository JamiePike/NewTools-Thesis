   publisher = {Plant Disease},
   title = {First Report of Fusarium oxysporum f. sp. cubense Tropical Race 4 Causing Panama Disease in Cavendish Bananas in Pakistan and Lebanon},
   volume = {100},
   url = {https://apsjournals.apsnet.org/doi/10.1094/PDIS-12-14-1356-PDN},
   year = {2015},
}
