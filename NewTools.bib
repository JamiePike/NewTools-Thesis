   title = {Identifying the causes and consequences of assembly gaps using a multiplatform genome assembly of a bird‐of‐paradise},
   volume = {21},
   url = {/pmc/articles/PMC7757076/ /pmc/articles/PMC7757076/?report=abstract https://www.ncbi.nlm.nih.gov/pmc/articles/PMC7757076/},
